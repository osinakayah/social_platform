<div class="container">
  <div class="row">
    <div class="offset-lg-3 col-lg-6">
      <br>
      <% if @post.errors.any? %>
        <ul class="alert alert-danger">
          <% @post.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      <% end %>

      <%= form_for(@post) do |f| %>

        <div class="form-group">
          <label for="new-post">What are you thinking</label>
          <%= f.text_area :content, rows: 5, class: "form-control" %>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
      <% end %>
      </form>

      <br>
      <h4>Users</h4>
      <div class="col-lg-12" >

        <%= render @users %>
        <%= will_paginate @users, class: "pages-container" %>


      </div>


    </div>
  </div>
</div>