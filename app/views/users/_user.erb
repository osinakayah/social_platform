<% if is_friend? user.id %>
    <div class="col-lg-12" >
      <br>
      <div class="list-group">
        <div class="list-group-item">
          <div class="row">
            <div class="col-6">
              <%= "#{user.first_name} #{user.last_name}" %>
            </div>
          </div>
        </div>
      </div>
    </div>

  <% else %>

    <div class="col-lg-12" >
      <br>
      <div class="list-group">
        <div class="list-group-item">
          <div class="row">
            <div class="col-6">
              <%= "#{user.first_name} #{user.last_name}" %>
            </div>
            <div class="col-4">
              <%= form_tag user_friends_url do %>
                <%= hidden_field_tag :friend_id, user.id %>
                <%= hidden_field_tag :friend_name, user.first_name %>
                <%= submit_tag  "Send Request", class: "btn btn-block btn-primary btn-sm" %>
              <% end %>

            </div>
          </div>
        </div>
      </div>
    </div>

<% end %>